@model AutoOtpad.Models.Promotion

@{
    ViewBag.Title = "Obriši Promociju";
}
@if (string.Compare(Context.Session.GetString("Role"), "Admin") == 0)
{


<h2>Obriši Promociju</h2>

<div class="alert alert-warning">
    <strong>Da li ste sigurni da želite obrisati ovu promociju?</strong>
</div>

<dl class="row">
    <dt class="col-sm-3">Naziv promocije:</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Dio:</dt>
    <dd class="col-sm-9">@Model.Part?.Name</dd>

    <dt class="col-sm-3">Popust:</dt>
    <dd class="col-sm-9">@Model.DiscountPercentage %</dd>

    <dt class="col-sm-3">Period:</dt>
    <dd class="col-sm-9">@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
</form>
}
else
{
    <h1 style="margin-top: 22vh; margin-bottom: 22vh; text-align:center">Nemate pristup ovoj stranici</h1>
}