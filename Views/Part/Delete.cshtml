@model AutoOtpad.Models.Part

@{
    ViewData["Title"] = "Brisanje dijela";
}
@if (string.Compare(Context.Session.GetString("Role"), "Admin") == 0)
{

<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <p>Da li ste sigurni da želite obrisati ovaj dio?</p>
    <dl class="row">
        <dt class="col-sm-3">Naziv</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3">Marka</dt>
        <dd class="col-sm-9">@Model.VehicleMake</dd>
        <dt class="col-sm-3">Cijena</dt>
        <dd class="col-sm-9">@Model.Price</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Obriši</button>
        <a asp-action="Index" class="btn btn-secondary">Nazad</a>
    </form>
</div>
}
else
{
    <h1 style="margin-top: 22vh; margin-bottom: 22vh; text-align:center">Nemate pristup ovoj stranici</h1>
}